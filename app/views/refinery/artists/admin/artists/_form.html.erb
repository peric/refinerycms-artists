
<%= form_for [refinery, :artists_admin, @artist] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @artist,
              :include_object_name => true %>


  <%= render "locale_picker",
              :current_locale => Globalize.locale if Refinery.i18n_enabled? -%>



  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>




  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>




  <div class='field'>
    <%= f.label :label -%>
    <%= f.text_field :label -%>
  </div>




  <div class='field'>
    <%= f.label :songkick -%>
    <%= f.text_field :songkick -%>
  </div>




  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website -%>
  </div>





  <div class='field'>
    <%= f.label :facebook -%>
    <%= f.text_field :facebook -%>
  </div>




  <div class='field'>
    <%= f.label :twitter -%>
    <%= f.text_field :twitter -%>
  </div>





  <div class='field'>
    <%= f.label :bandcamp -%>
    <%= f.text_field :bandcamp -%>
  </div>





  <div class='field'>
    <%= f.label :lastfm -%>
    <%= f.text_field :lastfm -%>
  </div>




  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @artist.photo,
               :toggle_image_display => false -%>
  </div>




  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:bio, :discography, :booking, :downloads],
                :object => "artists/artist" -%>
  </div>













  <div class='field'>
    <%= f.label :availability -%>
    <%= f.text_field :availability -%>
  </div>



  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.artists.admin.artists.artist'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @artist.name) -%>
<% end -%>


<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>

